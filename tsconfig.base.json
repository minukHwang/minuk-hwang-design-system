{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@minuk-hwang-design-system/style-tokens": [
        "packages/style-tokens/src"
      ],
      "@minuk-hwang-design-system/components-react": [
        "packages/components/react/src"
      ],
      "@minuk-hwang-design-system/components-react-native": [
        "packages/components/react-native/src"
      ],
      "@minuk-hwang-design-system/esbuild-config": [
        "packages/esbuild-config"
      ]
    }
  },
  "include": [],
  "references": [
    {
      "path": "./packages/style-tokens"
    },
    {
      "path": "./packages/components/react"
    },
    {
      "path": "./packages/components/react-native"
    }
  ]
}