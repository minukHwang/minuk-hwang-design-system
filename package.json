{
  "name": "minuk-hwang-design-system",
  "version": "1.0.0",
  "description": "Modern design system built with React, TypeScript, and Vanilla Extract",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "packages/style-tokens",
    "packages/esbuild-config",
    "packages/components/react",
    "apps/*"
  ],
  "scripts": {
    "prepare": "husky",
    "dev": "nx dev",
    "dev:storybook": "pnpm build:dev @minuk-hwang-design-system/tokens & pnpm build:dev @minuk-hwang-design-system/react & pnpm --filter @minuk-hwang-design-system/storybook dev",
    "graph": "nx run-many --target=build --graph",
    "build": "nx build",
    "build:all": "nx run-many --target=build --all",
    "build:dev": "nx build:dev",
    "clean": "nx clean",
    "clean:all": "nx run-many --target=clean --all",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "storybook": "pnpm --filter @minuk-hwang-design-system/storybook dev",
    "build:storybook": "pnpm --filter @minuk-hwang-design-system/storybook build",
    "publish:tokens": "pnpm --filter @minuk-hwang-design-system/tokens build && pnpm --filter @minuk-hwang-design-system/tokens publish",
    "publish:react": "pnpm --filter @minuk-hwang-design-system/react build && pnpm --filter @minuk-hwang-design-system/react publish",
    "publish:all": "pnpm publish:tokens && pnpm publish:react"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "design-system",
    "react",
    "typescript",
    "vanilla-extract",
    "components"
  ],
  "author": "Minuk Hwang",
  "license": "MIT",
  "packageManager": "pnpm@8.15.0",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/compat": "^1.1.1",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.7.0",
    "@nx/storybook": "^21.5.1",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "commitlint-config-gitmoji": "^2.3.1",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-storybook": "^0.8.0",
    "gitmoji-cli": "^9.7.0",
    "globals": "^15.8.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "nx": "^21.5.1",
    "prettier": "^3.3.3",
    "storybook": "^8.6.14",
    "typescript": "^5.5.4"
  }
}
